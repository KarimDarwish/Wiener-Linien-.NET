<Window
  x:Class="WienerLinienApi.Samples.WPF.View.BusStopFavDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:behaviors="clr-namespace:WPFTextBoxAutoComplete;assembly=WPFTextBoxAutoComplete"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:WienerLinienApi.Samples.WPF.View"
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
  mc:Ignorable="d"
  Title="BusStopFavDialog"
  Height="400"
  Width="500"
  ResizeMode="NoResize" >
  <Window.DataContext>
    <local:AutocomFile />
  </Window.DataContext>
  <Window.Resources>
    <Style
      x:Key="TextLabelStyle"
      TargetType="{x:Type Control}">
      <Setter
        Property="VerticalAlignment"
        Value="Center" />
      <Setter
        Property="HorizontalAlignment"
        Value="Right" />
      <Setter
        Property="Foreground"
        Value="Black" />
      <Setter
        Property="FontSize"
        Value="20" />
    </Style>

    <Style
      x:Key="TextBoxStyle"
      TargetType="{x:Type controls:AutoCompleteBox}">
      <Setter
        Property="VerticalAlignment"
        Value="Center" />
      <Setter
        Property="HorizontalAlignment"
        Value="Stretch" />
      <Setter
        Property="Foreground"
        Value="Black" />
      <Setter
        Property="Margin"
        Value="10 5 20 5" />
      <Setter
        Property="FontSize"
        Value="19" />
      <Setter
        Property="Padding"
        Value="3 3 3 3" />
    </Style>

    <Style
      x:Key="ComboBoxStyle"
      TargetType="{x:Type ComboBox}">
      <Setter
        Property="VerticalAlignment"
        Value="Center" />
      <Setter
        Property="HorizontalAlignment"
        Value="Stretch" />
      <Setter
        Property="Foreground"
        Value="Black" />
      <Setter
        Property="Margin"
        Value="10 5 120 5" />
      <Setter
        Property="FontSize"
        Value="19" />
      <Setter
        Property="Padding"
        Value="3 3 3 3" />
    </Style>
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition
        Height="1*" />
      <RowDefinition
        Height="5*" />
      <RowDefinition
        Height="5*" />
      <RowDefinition
        Height="5*" />
      <RowDefinition
        Height="5*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="1*" />
      <ColumnDefinition
        Width="2*" />
    </Grid.ColumnDefinitions>

    <Label
      Grid.Row="1"
      Grid.Column="0"
      Style="{StaticResource TextLabelStyle}"
      Content="Stop Name"/>

    <Label
      Grid.Row="2"
      Grid.Column="0"
      Style="{StaticResource TextLabelStyle}"
      Content="Line" />

    <Label
      Grid.Row="3"
      Grid.Column="0"
      Style="{StaticResource TextLabelStyle}"
      Content="Direction" />

    <controls:AutoCompleteBox
      x:Name="StopName"
      Grid.Row="1"
      Grid.Column="1"
      Style="{StaticResource TextBoxStyle}"
      ItemsSource="{Binding TestItems}"
      SelectedItem="{Binding TestText, Mode=TwoWay}"
      DropDownClosed="StopName_DropDownClosed" />
    <ComboBox
      x:Name="LineName"
      ItemsSource="{Binding LineNameColl}"
      Style="{StaticResource ComboBoxStyle}"
      SelectedValue="{Binding SelectedLine , Mode=TwoWay}"
      DropDownClosed="LineName_OnDropDownClosed"
      Grid.Row="2"
      Grid.Column="1">
    </ComboBox>

    <ComboBox
      x:Name="Direction"
      ItemsSource="{Binding DirectionColl}"
      Style="{StaticResource ComboBoxStyle}"
      Grid.Row="3"
      Grid.Column="1">
    </ComboBox>
    
    <Button
      Grid.Row="4"
      Grid.Column="1"
      Margin="90 30 30 30"
      Content="OK"
      ></Button>
    
  </Grid>
</Window>

